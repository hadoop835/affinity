#!/bin/bash

base_dir="$( cd "$( dirname ${BASH_SOURCE[0]} )"/../. && pwd )"

echo "checking for affinity-cli updates.."
cd $base_dir/../
./gradlew :cli:build -q --exclude-task test

if [ $? -eq 0 ]; then
    script="$base_dir/build/scripts/affinity-cli"

    $script $*

    if [ $? -ne 0 ]; then
        printUsage
        exit $?
    fi
fi